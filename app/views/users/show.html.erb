<div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= image_tag('sample-author1.jpg', class: "img-circle pull-left profile-thumb", style: "width: 100px; height: 100px; margin-top: 20px;") %>
      <% if @user.id == current_user.id %>
         <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <% end %>
</div>

<%= render 'post_images/list', post_images: @post_images %>